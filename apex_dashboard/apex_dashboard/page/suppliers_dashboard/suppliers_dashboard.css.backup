/* Variables & Theme - Dark Mode */
:root {
	/* Dark Glass Effect */
	--glass-bg: rgba(30, 30, 30, 0.7);
	--glass-border: rgba(255, 255, 255, 0.1);
	--glass-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
	--blur-amount: 20px;

	/* Dark Theme Colors */
	--text-primary: #ffffff;
	--text-secondary: #a0a0a0;
	--bg-primary: #1a1a1a;
	--bg-secondary: #2a2a2a;

	/* Card Colors - Vibrant for Dark Theme */
	--theme-purple: #9333ea;
	--theme-blue: #3b82f6;
	--theme-gold: #f59e0b;
	--theme-lime: #84cc16;
	--theme-gray: #6b7280;
	--theme-red: #ef4444;
	--theme-green: #10b981;
	--theme-pink: #ec4899;
	--theme-orange: #f97316;
}

.dashboard-template {
	padding: 20px;
	font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
	background: linear-gradient(135deg, #0f0f0f 0%, #1a1a1a 100%);
	min-height: 100vh;
}

/* Header */
.dashboard-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 30px;
	padding: 0 10px;
}

.header-content {
	display: flex;
	align-items: center;
	gap: 15px;
}

.header-content h1 {
	font-size: 24px;
	font-weight: 700;
	color: var(--text-primary);
	margin: 0;
}

#back-btn {
	padding: 5px 12px;
	font-size: 13px;
	background: rgba(255, 255, 255, 0.1);
	border: 1px solid rgba(255, 255, 255, 0.2);
	border-radius: 6px;
	color: var(--text-secondary);
	cursor: pointer;
	transition: all 0.2s;
	display: flex;
	align-items: center;
	gap: 5px;
}

#back-btn:hover {
	background: rgba(255, 255, 255, 0.2);
	color: var(--text-primary);
}

.subtitle {
	color: var(--text-secondary);
	font-size: 14px;
	margin: 5px 0 0 0;
}

.header-actions {
	display: flex;
	align-items: center;
	gap: 15px;
}

.total-card {
	background: rgba(255, 255, 255, 0.1);
	backdrop-filter: blur(10px);
	padding: 10px 20px;
	border-radius: 16px;
	border: 1px solid rgba(255, 255, 255, 0.2);
	box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
	text-align: right;
}

.total-card .label {
	display: block;
	font-size: 11px;
	text-transform: uppercase;
	letter-spacing: 0.5px;
	color: var(--text-secondary);
}

.total-card .value {
	display: block;
	font-size: 20px;
	font-weight: 800;
	color: var(--text-primary);
}

.btn-glass {
	background: rgba(255, 255, 255, 0.1);
	border: 1px solid rgba(255, 255, 255, 0.2);
	border-radius: 12px;
	padding: 10px;
	cursor: pointer;
	transition: all 0.2s ease;
	color: var(--text-secondary);
}

.btn-glass:hover {
	background: rgba(255, 255, 255, 0.2);
	transform: translateY(-2px);
	color: var(--text-primary);
}

/* Grid */
.dashboard-grid {
	display: grid;
	grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
	gap: 25px;
}

/* Category Card */
.category-card {
	background: var(--glass-bg);
	backdrop-filter: blur(var(--blur-amount));
	-webkit-backdrop-filter: blur(var(--blur-amount));
	border: 1px solid var(--glass-border);
	border-radius: 22px;
	box-shadow: var(--glass-shadow);
	overflow: hidden;
	transition: transform 0.3s ease, box-shadow 0.3s ease;
	display: flex;
	flex-direction: column;
}

.category-card:hover {
	transform: translateY(-5px);
	box-shadow: 0 12px 40px 0 rgba(31, 38, 135, 0.2);
}

.category-header {
	padding: 20px;
	border-bottom: 1px solid rgba(255, 255, 255, 0.3);
	display: flex;
	justify-content: space-between;
	align-items: center;
	cursor: pointer;
	transition: background 0.2s;
}

.category-header:hover {
	background: rgba(255, 255, 255, 0.1);
}

.category-info {
	display: flex;
	align-items: center;
	gap: 10px;
}

.toggle-icon {
	font-size: 14px;
	color: var(--text-secondary);
	transition: transform 0.2s;
}

.category-name {
	font-size: 18px;
	font-weight: 600;
	color: var(--text-primary);
}

.category-total {
	font-size: 16px;
	font-weight: 700;
	color: var(--text-primary);
}

.category-body {
	padding: 15px;
}

.account-row {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 12px;
	margin-bottom: 8px;
	background: rgba(255, 255, 255, 0.05);
	border-radius: 12px;
	transition: background 0.2s;
}

.account-row:hover {
	background: rgba(255, 255, 255, 0.1);
}

.account-info {
	display: flex;
	align-items: center;
	gap: 10px;
}

.account-name {
	font-size: 14px;
	font-weight: 500;
	color: var(--text-primary);
}

.account-balance {
	font-size: 14px;
	font-weight: 700;
	color: var(--text-primary);
}

/* Loader */
.loader-container {
	text-align: center;
	padding: 50px;
	color: var(--text-secondary);
}

.spinner {
	width: 40px;
	height: 40px;
	border: 4px solid rgba(0, 0, 0, 0.1);
	border-left-color: var(--text-primary);
	border-radius: 50%;
	animation: spin 1s linear infinite;
	margin: 0 auto 15px;
}

@keyframes spin {
	100% {
		transform: rotate(360deg);
	}
}

.dashboard-footer {
	text-align: center;
	margin-top: 40px;
	font-size: 12px;
	color: var(--text-secondary);
	opacity: 0.7;
}

/* Themes - Dark Mode Vibrant Colors */
.theme-purple {
	background: linear-gradient(135deg, rgba(147, 51, 234, 0.3) 0%, rgba(147, 51, 234, 0.1) 100%);
	border-left: 4px solid #9333ea !important;
}

.theme-blue {
	background: linear-gradient(135deg, rgba(59, 130, 246, 0.3) 0%, rgba(59, 130, 246, 0.1) 100%);
	border-left: 4px solid #3b82f6 !important;
}

.theme-gold {
	background: linear-gradient(135deg, rgba(245, 158, 11, 0.3) 0%, rgba(245, 158, 11, 0.1) 100%);
	border-left: 4px solid #f59e0b !important;
}

.theme-lime {
	background: linear-gradient(135deg, rgba(132, 204, 22, 0.3) 0%, rgba(132, 204, 22, 0.1) 100%);
	border-left: 4px solid #84cc16 !important;
}

.theme-gray {
	background: linear-gradient(135deg, rgba(107, 114, 128, 0.3) 0%, rgba(107, 114, 128, 0.1) 100%);
	border-left: 4px solid #6b7280 !important;
}

.theme-red {
	background: linear-gradient(135deg, rgba(239, 68, 68, 0.3) 0%, rgba(239, 68, 68, 0.1) 100%);
	border-left: 4px solid #ef4444 !important;
}

.theme-green {
	background: linear-gradient(135deg, rgba(16, 185, 129, 0.3) 0%, rgba(16, 185, 129, 0.1) 100%);
	border-left: 4px solid #10b981 !important;
}

.theme-pink {
	background: linear-gradient(135deg, rgba(236, 72, 153, 0.3) 0%, rgba(236, 72, 153, 0.1) 100%);
	border-left: 4px solid #ec4899 !important;
}

.theme-orange {
	background: linear-gradient(135deg, rgba(249, 115, 22, 0.3) 0%, rgba(249, 115, 22, 0.1) 100%);
	border-left: 4px solid #f97316 !important;
}

/* Mobile */
@media (max-width: 768px) {
	.dashboard-grid {
		grid-template-columns: 1fr;
	}

	.header-content h1 {
		font-size: 20px;
	}

	.total-expense-card .value {
		font-size: 16px;
	}
}